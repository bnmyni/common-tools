{
  "template": "services-*",
  "order":    1,
  "settings": {
    "number_of_shards": 4,
    "number_of_replicas": 0,
    "analysis": {
      "tokenizer": {
        "one_char" :{
          "type" : "nGram",
          "min_gram" : 1,
          "max_gram" : 1,
          "token_chars" : [ "letter", "digit", "whitespace", "punctuation", "symbol","math_symbol","control"]
        }
      },
      "analyzer": {
        "substring_match" : {
          "type" : "custom",
          "tokenizer" : "pattern",
          "filter" : ["lowercase"],
          "char_filter" : []
        }
      }
    }
  },
  "mappings": {
    "_default_": {
      "_all": {
        "enabled": true
      }
    },
	"services" : {
        "_ttl": {
        "enabled": true,
        "default": "7d"
      },
        "properties" : {
            "time" : {
                "type": "long"
            },
            "biz_date": {
                "type": "string",
                "index": "not_analyzed"
            },
            "biz_id": {
                "type" : "string",
				 "analyzer": "english"
            },
			"biz_level": {
                "type": "string",
                "index": "not_analyzed"
            },
			"biz_code": {
                "type": "string",
                "index": "not_analyzed"
            },
			"biz_content": {
                "type": "string",
                "analyzer": "english"
            },
			"filename": {
                "type": "string",
                "index": "not_analyzed"
            },
			"app_id": {
                "type": "string",
                "index": "not_analyzed"
            },
			"log_data": {
                "type": "string",
                "analyzer": "english"
            },
			"machine": {
                "type": "string",
                "index": "not_analyzed"
            },
			"container_id": {
                "type": "string",
                "index": "not_analyzed"
            }
        }
    }
  }
}
